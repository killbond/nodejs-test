</nav>

<!-- Page Content -->
<div class="container">

    <%- body -%>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; <%= new Date().getFullYear() %></p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>
<!-- /.container -->

<!-- jQuery -->
<script src="/vendor/jquery/dist/jquery.min.js"></script>
<script src="/vendor/jquery-color/jquery.color.js"></script>
<script src="/js/socket.io.js"></script>
<script>
    var socket = io.connect(),
        sid = "<%= name %>";

    socket.on('connected', function (data) {
        $("#new_one").html(data.author + " joined")
                .css({color: '#31708f'}).stop(true, true).animate({ color: '#fff'}, 1200);
    });

    $("form").submit(function(e) {
        socket.emit('message', { text:  $(this).find("input[name=message]").val(), author: sid }, function (data) {
            $("#messages").prepend(
                    '<div class="row"><div class="col-md-2 text-right"><b>'+data.author+
                    '</b>:</div><div class="col-md-6">'+data.text+
                    '</div><div class="col-md-3 text-right">'+(new Date()).toLocaleTimeString()+'</div></div><hr/>');
            $("#messages").find(".row").first().css({backgroundColor: '#fcf8e3'}).stop(true, true).animate({ backgroundColor: '#fff'}, 2000);
            $("form input[name=message]").val("");
        });
        e.preventDefault();
    });

    socket.on('message', function (data) {
        $("#messages").prepend(
                '<div class="row"><div class="col-md-2"><b>'+data.author+
                '</b>:</div><div class="col-md-6">'+data.text+
                '</div><div class="col-md-3">'+(new Date()).toLocaleTimeString()+'</div></div><hr/>');
        $("#messages").find(".row").first().css({backgroundColor: '#fcf8e3'}).stop(true, true).animate({ backgroundColor: '#fff'}, 2000);
    });

    socket.emit("connected", { author: sid });
</script>

<!-- Bootstrap Core JavaScript -->
<script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>

</body>

</html>
